<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cause.transaction.mapper.UserMapper">
    <!--    开启二级缓存，很容易忘记-->
    <cache/>

    <select id="getAllUsers" resultMap="results">
        select *
        from users
    </select>

    <select id="getAllUsersById" resultMap="results">
        select *
        from users
        where id > #{id}
    </select>

    <select id="getUsersById" resultType="com.cause.transaction.model.User">
        select *
        from users
        where id = #{id}
    </select>

    <select id="getCounts" resultType="java.lang.Integer">
        select count(*)
        from users
    </select>

    <resultMap type="com.cause.transaction.model.User" id="results">
        <id column="id" property="id"/>
        <result property="name" column="name"/>
    </resultMap>

    <insert id="addUser">
        insert into users(id, name)
        values (#{id}, #{name})
    </insert>

    <update id="updateUser">
        update users
        set name = #{name}
        where id = #{id}
    </update>

</mapper>
